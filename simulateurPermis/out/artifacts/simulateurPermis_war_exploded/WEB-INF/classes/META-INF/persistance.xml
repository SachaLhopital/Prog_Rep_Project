<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="permisPistePersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.simulateurPermis.entities.ActionEntity</class>
        <class>com.simulateurPermis.entities.AppartientEntity</class>
        <class>com.simulateurPermis.entities.ApprenantEntity</class>
        <class>com.simulateurPermis.entities.CalendrierEntity</class>
        <class>com.simulateurPermis.entities.EstAssocieEntity</class>
        <class>com.simulateurPermis.entities.FixeEntity</class>
        <class>com.simulateurPermis.entities.IndicateurEntity</class>
        <class>com.simulateurPermis.entities.InscritEntity</class>
        <class>com.simulateurPermis.entities.JeuEntity</class>
        <class>com.simulateurPermis.entities.MissionEntity</class>
        <class>com.simulateurPermis.entities.ObjectifEntity</class>
        <class>com.simulateurPermis.entities.ObtientEntity</class>
        <class>com.simulateurPermis.entities.PossedeEntity</class>
        <class>com.simulateurPermis.entities.RegleEntity</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/permispiste" />
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
            <property name="hibernate.connection.username" value="sa" />
            <property name="hibernate.connection.password" value="" />
            <property name="hibernate.hbm2ddl.auto" value="create-drop" />
        </properties>
    </persistence-unit>
</persistence>